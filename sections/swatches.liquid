<style>
    {% for block in section.blocks %}
      .custom .color-swatch--{{ block.settings.title | handleize }}{
        {% if block.settings.image != blank or block.settings.title == blank %}
        background:url("{{ block.settings.image | img_url:"small" }}") fixed no-repeat center/cover;
        {% else %}
        background:{{ block.settings.color_code }};
        {% endif %}
      }
    {% endfor %}
  </style>
  
  {% schema %}
  {
    "name": "Swatches",
    "settings": [
    ],
    "blocks": [
     {
       "name":"solid color",
       "type": "solid-color",
       "settings": [
  
         {
            "type": "text",
        "id": "title",
        "label": "gradient color name"
  
  
         },
         {
       "type": "color_background",
       "id": "color_code",
       "label": "Gradient color"
        },
         {
           "type": "image_picker",
           "id": "image",
           "label": "Image"
         }
  
       ]
     }
  
    ]
  }
  {% endschema %}
  