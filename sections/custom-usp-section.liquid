{{ 'custom-usp.css' | asset_url | stylesheet_tag }}

<div class="customuspheading">
    <h2>{{ section.settings.heading }}</h2>
</div>
<div class="custom-usp">
  
    {% for block in section.blocks %}
    <div class="custom-usp__slide" data-aos="fade-up" data-aos-duration="2000">
        {% if block.settings.image_url != empty %}
          <div class="custom-usp__image">
            {% if block.settings.image_picker != blank %}
              <img src="{{ block.settings.image_picker | image_url }}" alt="select image" height="32" width="32" />
            
            
            {% endif %}
          </div>
        {% endif %}
        
        <div>
            <h4 class="custome-usp__title">{{ block.settings.title }}</h4>
            <p class='custom-usp__description'>{{ block.settings.description }}</p>
        </div>
    </div>
    {% endfor %}
</div>

{% schema %}
{
    "name": "Custom USP",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Why Choose Effortless?"
        }
    ],
    "blocks": [
        {
            "name": "slide",
            "type": "column",
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image_picker",
                    "label": "Select Image"
                },
                {
                    "type": "text",
                    "id": "title",
                    "label": "Title",
                    "default": "Title"
                },
                {
                    "type": "text",
                    "id": "description",
                    "label": "Description",
                    "default": "Text about Photo"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Custom USP section"
        }
    ]
}
{% endschema %}