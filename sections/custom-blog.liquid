{{ 'custom-blog.css' | asset_url | stylesheet_tag }}
{%- style -%}
  .section-{{ section.id }}-padding {
    padding-top: {{ section.settings.padding_top | times: 0.75 | round: 0 }}px;
    padding-bottom: {{ section.settings.padding_bottom | times: 0.75 | round: 0 }}px;
  }
  @media screen and (min-width: 750px) {
    .section-{{ section.id }}-padding {
      padding-top: {{ section.settings.padding_top }}px;
      padding-bottom: {{ section.settings.padding_bottom }}px;
    }
  }
{%- endstyle -%}
{% assign show_image = section.settings.show_image %}
{% assign show_author = section.settings.show_author %}
{% assign show_view_all = section.settings.show_view_all %}
<section class="section-{{ section.id }}-padding">
  <div class="page-width blog-posts-wrapper">
    <div  data-aos="fade-left" class="blog-post-heading {{section.settings.heading_size}}">{{section.settings.heading}}</div>
    <custom-splider
      class="splide" id="custom_blog_post"
      data-desktopPerPage="{{section.settings.columns_desktop}}"
      data-mobilePerPage="1"
      data-autoplay="{{ section.settings.auto_play }}"
      data-autoplay-speed="{{ section.settings.auto_play_duration | times: 1000 | default: 3000 }}"
      data-showArrows="{{ section.settings.show_arrows }}"
      data-showDots="{{section.settings.show_pagination}}"
    >
      <div class="splide__track">
        <ul class="splide__list">
          {% for article in section.settings.blog.articles %}
            <li class="splide__slide blog-card">
              {% if show_image %}
                <div class="blog-image-wrapper">
                  <img
                    src="{{article.image.src |  image_url }}"
                    width="399"
                    height="369"
                  >
                </div>
              {% endif %}
              <div class="blog-wrapper--blog-card--blog-text">
                <h3>{{ article.title }}</h3>
                {% if show_author %}
                  <p>{{ article.author }}</p>
                {% endif %}
                <p>{{ article.published_at | date: '%B %d, %Y' }}</p>
                <p>{{ article.content | truncate: 130 }}</p>
                <div class="blog-wrapper--blog-card--blog-text--read-more-wrapper">
                  <a href="#" class="blog-wrapper--blog-card--blog-text--read-more-wrapper--read-more">Read more</a>
                  <span class="blog-wrapper--blog-card--blog-text--read-more-wrapper--line"></span>
                </div>
              </div>
            </li>
          {% endfor %}
        </ul>
      </div>
    </custom-splider>
  </div>
  <div>
    {% if show_view_all %}
      <a href="{{ section.settings.blog.url }}" class="blog-wrapper--view-all-button">View All</a>
    {% endif %}
  </div>
</section>
<script src="{{ 'custom-splider-section.js' | asset_url }}" defer></script>
{% schema %}
{
  "name": "Custom Blog Post",
  "tag": "section",
  "disabled_on": {
    "groups": ["header", "footer"]
  },
  "settings": [
    {
      "type": "inline_richtext",
      "id": "heading",
      "default": "Blog posts",
      "label": "Blog posts"
    },
    {
      "type": "select",
      "id": "heading_size",
      "options": [
        {
          "value": "h2",
          "label": "Small"
        },
        {
          "value": "h1",
          "label": "Medium"
        },
        {
          "value": "h0",
          "label": "Large"
        }
      ],
      "default": "h1",
      "label": "Medium"
    },
    {
      "type": "blog",
      "id": "blog",
      "label": "Select Your Blog"
    },
    {
      "type": "range",
      "id": "columns_desktop",
      "min": 1,
      "max": 4,
      "step": 1,
      "default": 3,
      "label": "Choose how many Columns to show on desktop"
    },
    {
      "type": "checkbox",
      "id": "show_image",
      "default": true,
      "label": "Show Image Of The Blog"
    },
    {
      "type": "checkbox",
      "id": "show_date",
      "default": true,
      "label": "Show Published Date"
    },
    {
      "type": "checkbox",
      "id": "show_author",
      "default": false,
      "label": "Show Author Name"
    },
    {
      "type": "checkbox",
      "id": "show_view_all",
      "default": true,
      "label": "Show View All Button"
    },
    {
      "type": "header",
      "content": "Header Settings"
    },
    {
      "type": "range",
      "id": "padding_top",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Top",
      "default": 36
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "min": 0,
      "max": 100,
      "step": 4,
      "unit": "px",
      "label": "Padding Bottom",
      "default": 36
    },
    {
      "type": "header",
      "content": "Slider Settings"
    },
    {
      "type": "checkbox",
      "id": "auto_play",
      "label": "Enable Autoplay",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_pagination",
      "label": "Show dots",
      "default": true
    },
    {
      "type": "checkbox",
      "id": "show_arrows",
      "label": "Show Arrows",
      "default": false
    },
    {
      "type": "range",
      "id": "auto_play_duration",
      "label": "Autoplay duration",
      "min": 1000,
      "max": 5000,
      "step": 1000,
      "unit": "ms",
      "default": 2000
    }
  ],
  "presets": [
    {
      "name": "Custom Blogs Post"
    }
  ]
}
{% endschema %}