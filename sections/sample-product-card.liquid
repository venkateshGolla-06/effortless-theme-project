<script src="{{ 'practice-custom.js' | asset_url }}" defer></script>
{% assign products = section.settings.product_list %}

<div class="tutorial page-width">
  <h3 class="featured-custom-title">{{ section.settings.heading }}</h3>
  <ul class="grid">
    {% for product in products %}
      <li class="grid__item grid--4-col-desktop grid--3-col-tablet">
        {% render 'text-product-card', product: product %}
      </li>
    {% endfor %}
  </ul>
</div>
 
{% schema %}
{
    "name": "Tutorial fc",
    "tag": "section",
    "class": "section",
    "settings": [
        {
          "type": "text",
          "id": "heading",
          "label": "Heading",
          "default" : "Heading"
        },
        {
            "type": "product_list",
            "id": "product_list",
            "label": "Select product"
        },
        {
          "type": "checkbox",
           "id": "show_view_all",
            "label": "Show view all"
        }
    ],
    "presets": [
        {
         "name": "Tutorial fc"
        }
    ]
}
{% endschema %}