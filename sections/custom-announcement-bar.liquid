{{ 'custom-announcement-bar.css' | asset_url | stylesheet_tag }}




{% schema %}
    {
        "name": "Custom announcement bar",
        "tag": "section",
        "class": "section",
        "enabled_on": {
            "groups": ["header"]
          },
        "settings": [
            {
                "type": "header",
                "content": "Slider options"
            },
            {
              "type": "color_background",
              "id": "backgrond_color",
              "label": "Background color",
              "default": "#000000"
            },
            {
                "type": "checkbox",
                "id": "auto_play",
                "label": "Enable auto play",
                "default": true
            },
            {
                "type": "checkbox",
                "id": "show_pagination",
                "label": "Show dots",
                "default": false
            },
            {
                "type": "checkbox",
                "id": "show_arrows",
                "label": "Show arrows",
                "default": true
            },
            {
                "type": "range",
                "id": "auto_play_duration",
                "min": 1000,
                "max": 5000,
                "step": 1000,
                "unit": "ms",
                "label": "Autoplay duration",
                "default": 4000
            },
            {
                "type": "header",
                "content": "Text customization"
            },
            {
                "type": "range",
                "id": "font_size_for_mobile",
                "min": 0,
                "max": 30,
                "step": 1,
                "unit": "px",
                "label": "Fontsize for mobile",
                "default": 12
            },
            {
                "type": "range",
                "id": "fontsize_for_desktop",
                "min": 0,
                "max": 50,
                "step": 1,
                "unit": "px",
                "label": "Fontsize for desktop",
                "default": 20
            },
            {
                "type": "color",
                "id": "text_color",
                "label": "Text color",
                "default": "#ffffff"
            },
            {
                "type": "range",
                "id": "font_weight",
                "min": 100,
                "max": 1000,
                "step": 100,
                "label": "Font weight",
                "default": 300
            },
            {
                "type": "header",
                "content": "Section padding"
            },
            {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 100,
                "step": 1,
                "unit": "px",
                "label": "Padding top",
                "default": 0
            },
            {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 100,
                "step": 1,
                "unit": "px",
                "label": "Padding bottom",
                "default": 0
            }
        ],
        "blocks": [
            {
                "name":"Slide",
                "type": "slide",
                "settings": [
                    {
                        "type": "header",
                        "content": "Text customization"
                    },
                    {
                        "type": "text",
                        "id": "announcement",
                        "label": "Pre announcement",
                        "default": "An Effortless Shipping Experience"
                    },
                    {
                        "type": "text",
                        "id": "navigation_text",
                        "label": "Navigation Label",
                        "default": "Learn More",
                        "info": "Navigation Label"
                    },
                    {
                        "type": "url",
                        "id": "navigation_url",
                        "label": "Navigation Url"
                    },
                    {
                        "type": "color",
                        "id": "underline_color",
                        "label": "Navigation link Underline color",
                        "default": "#06aaa1"
                    }
                   
                ]
            }
        ],
        "presets": [
            {
                "name": "Custom announcement bar",
                "blocks": [
                    {
                        "type": "slide"
                    },
                    {
                        "type": "slide"
                    },
                    {
                        "type": "slide"
                    }
                ]
            }
        ]
    }
{% endschema %}