 {{ 'custom-announcement-bar.css' | asset_url | stylesheet_tag }}

{% liquid
    assign autoPlay = section.settings.auto_play
    assign autoPlayDuration = section.settings.auto_play_duration
    assign showPagination = section.settings.show_pagination
    assign showArrows = section.settings.show_arrows
  %}
  
  {% capture sliderSettings %}
    {
      "autoplay":{{autoPlay}},
      "pagination":{{showPagination}},
      "speed":{{autoPlayDuration}},
      "arrows":{{showArrows}},
      "type":"loop",
      "perPage": 1,
      "perMove": 1
    }
  {% endcapture %}

  {% style %}

    .custom-announcement-bar--{{ section.id }}{
      padding-top:{{ section.settings.padding_top  }}px;
      padding-bottom:{{ section.settings.padding_bottom }}px;
      background-color: {{section.settings.backgrond_color}};
    }
    .custom-announcement-bar--text{
        line-height: 1.5;
        text-align:center;
        font-size : {{ section.settings.font_size_for_mobile }}px;
        color: {{ section.settings.text_color }};
        font-weight: {{ section.settings.font_weight }};
  }
  
  .custom-announcement-bar--navigation_styles{
      text-decoration:none;
      outline:none;
      margin-left:15px;
      color: {{ section.settings.text_color }};
      border-bottom: 1px solid {{section.settings.underline_color}};
  }
    @media screen and (min-width:749px){
      .custom-announcement-bar--{{ section.id }}{
          padding-top:{{ section.settings.padding_top | divided_by:2 }}px;
          padding-bottom:{{ section.settings.padding_bottom | divided_by:2}}px;
      }
      .custom-announcement-bar--splider-width{
          width:40%;
          margin : 0 auto;
      }
       .custom-announcement-bar--text{
      font-size: {{ section.settings.fontsize_for_desktop }}px;
      }
  }
  
{% endstyle %}



<div class="custom-announcement-bar--{{ section.id }}" id="customSlideshow">
    <div class="custom-announcement-bar--splider-width">
        <splider-component class="splide  custom-announcement-bar--splide-container" data-slider-options='{{ sliderSettings }}'>
            <div class="splide__track">
                <ul class="splide__list">
                    {% for block in section.blocks %}
                        <li class="splide__slide custom-announcement-bar--text">{{ block.settings.announcement }} <span ><a href="{{block.settings.navigation_url}}" class="custom-announcement-bar--navigation_styles" > {{ block.settings.navigation_text }} </a> </span></li>
                    {% endfor %}
                </ul>
            </div>
        </splider-component>
        <div class="custom-announcement-bar--language-container">
        </div>

    </div>
</div>




<script src="{{ 'custom-splider.js' | asset_url }}" defer></script>

{% schema %}
    {
        "name": "Custom announcement bar",
        "tag": "section",
        "class": "section",
        "enabled_on": {
            "groups": ["header"]
          },
        "settings": [
            {
                "type": "header",
                "content": "Slider options"
            },
            {
              "type": "color_background",
              "id": "backgrond_color",
              "label": "Background color",
              "default": "#000000"
            },
            {
                "type": "checkbox",
                "id": "auto_play",
                "label": "Enable auto play",
                "default": true
            },
            {
                "type": "checkbox",
                "id": "show_pagination",
                "label": "Show dots",
                "default": false
            },
            {
                "type": "checkbox",
                "id": "show_arrows",
                "label": "Show arrows",
                "default": true
            },
            {
                "type": "range",
                "id": "auto_play_duration",
                "min": 1000,
                "max": 5000,
                "step": 1000,
                "unit": "ms",
                "label": "Autoplay duration",
                "default": 4000
            },
            {
                "type": "header",
                "content": "Text customization"
            },
            {
                "type": "range",
                "id": "font_size_for_mobile",
                "min": 0,
                "max": 30,
                "step": 1,
                "unit": "px",
                "label": "Fontsize for mobile",
                "default": 12
            },
            {
                "type": "range",
                "id": "fontsize_for_desktop",
                "min": 0,
                "max": 50,
                "step": 1,
                "unit": "px",
                "label": "Fontsize for desktop",
                "default": 20
            },
            {
                "type": "color",
                "id": "text_color",
                "label": "Text color",
                "default": "#ffffff"
            },
            {
                "type": "color",
                "id": "underline_color",
                "label": "Navigation link Underline color",
                "default": "#06aaa1"
            },
            {
                "type": "range",
                "id": "font_weight",
                "min": 100,
                "max": 1000,
                "step": 100,
                "label": "Font weight",
                "default": 300
            },
            {
                "type": "header",
                "content": "Section padding"
            },
            {
                "type": "range",
                "id": "padding_top",
                "min": 0,
                "max": 100,
                "step": 1,
                "unit": "px",
                "label": "Padding top",
                "default": 0
            },
            {
                "type": "range",
                "id": "padding_bottom",
                "min": 0,
                "max": 100,
                "step": 1,
                "unit": "px",
                "label": "Padding bottom",
                "default": 0
            }
        ],
        "blocks": [
            {
                "name":"Slide",
                "type": "slide",
                "settings": [
                    {
                        "type": "header",
                        "content": "Text customization"
                    },
                    {
                        "type": "text",
                        "id": "announcement",
                        "label": "Pre announcement",
                        "default": "An Effortless Shipping Experience"
                    },
                    {
                        "type": "text",
                        "id": "navigation_text",
                        "label": "Navigation Label",
                        "default": "Learn More",
                        "info": "Navigation Label"
                    },
                    {
                        "type": "url",
                        "id": "navigation_url",
                        "label": "Navigation Url"
                    }
                   
                ]
            }
        ],
        "presets": [
            {
                "name": "Custom announcement bar",
                "blocks": [
                    {
                        "type": "slide"
                    },
                    {
                        "type": "slide"
                    },
                    {
                        "type": "slide"
                    }
                ]
            }
        ]
    }
{% endschema %}